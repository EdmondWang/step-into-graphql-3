    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "cwd": "${workspaceFolder}/server/",
            "program": "${workspaceFolder}/server/src/main.ts",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/server/dist/src/*.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "processId": "${command:PickProcess}"
        }
    ]
}